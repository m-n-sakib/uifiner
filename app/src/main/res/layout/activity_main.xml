<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Switch
        android:id="@+id/volume_left_or_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#014851"
        android:buttonTint="#00BCD4"
        android:foregroundTint="#2196F3"
        android:text="Volume button align right?"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumbTint="#03A9F4" />

    <Switch
        android:id="@+id/ring_or_vib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#014851"
        android:buttonTint="#00BCD4"
        android:foregroundTint="#2196F3"
        android:text="Ringtone on or off?"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:thumbTint="#03A9F4" />

    <TextView
        android:id="@+id/home_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Set Percentage to Notify"
        android:textColor="#9C27B0"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/percent_to_set"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_1"
        android:hint="100"
        android:inputType="number"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#00BCD4"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#013D45"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/set_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#28FBDD"
        android:text="Set Alarm"
        android:textColor="#00372C"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/noise_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Set Percentage to Notify"
        android:textColor="#9C27B0"
        android:textSize="20dp"
        android:background="@drawable/edit_text_1"
        android:textStyle="bold"
        android:visibility="gone"/>
    <Button
        android:id="@+id/noiose_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#28FBDD"
        android:text="Set Alarm"
        android:textColor="#00372C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"/>


</LinearLayout>